<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="genre"
            type="com.github.harmittaa.moviebrowser.domain.MovieGenreLocal" />

        <variable
            name="clickListener"
            type="com.github.harmittaa.moviebrowser.browse.MovieClickListener" />

    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@color/colorAccent"
        android:onClick="@{() -> clickListener.onGenreClicked(genre)}">

        <TextView
            android:id="@+id/genre_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="8dp"
            android:text="@{genre.name}"
            tools:text="Science Fiction" />

    </LinearLayout>
</layout>
