<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="movie"
            type="com.github.harmittaa.moviebrowser.domain.Movie" />

        <variable
            name="clickListener"
            type="com.github.harmittaa.moviebrowser.browse.MovieClickListener" />

    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/item_movie_height"
            android:background="@drawable/movie_background"
            android:onClick="@{() -> clickListener.onMovieClicked(movie)}">

            <TextView
                android:id="@+id/item_movie_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="@{movie.title}"
                android:textAlignment="center"
                android:textColor="@color/selection_white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Project Power" />

            <ImageView
                android:id="@+id/item_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_4"
                android:contentDescription="@string/star"
                android:src="@drawable/ic_star"
                app:layout_constraintStart_toStartOf="@id/item_movie_title"
                app:layout_constraintTop_toBottomOf="@id/item_movie_title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{movie.rating}"
                android:textColor="@color/selection_white"
                android:layout_marginStart="2dp"
                app:layout_constraintStart_toEndOf="@id/item_star"
                app:layout_constraintTop_toTopOf="@id/item_star"
                tools:text="2.2" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Space
            android:layout_width="8dp"
            android:layout_height="match_parent" />
    </LinearLayout>
</layout>
