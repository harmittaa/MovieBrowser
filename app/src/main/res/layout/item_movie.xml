<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="movie"
            type="com.github.harmittaa.moviebrowser.domain.Movie" />

        <variable
            name="clickListener"
            type="com.github.harmittaa.moviebrowser.browse.MovieClickListener" />

    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:background="@drawable/movie_background"
            android:onClick="@{() -> clickListener.onMovieClicked(movie)}"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:contentDescription="@string/star"
                android:src="@drawable/ic_star" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginHorizontal="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:text="@{movie.title}"
                android:textAlignment="center"
                android:textColor="@color/selection_white"
                tools:text="Project Power" />
        </LinearLayout>

        <Space
            android:layout_width="8dp"
            android:layout_height="match_parent" />
    </LinearLayout>
</layout>
